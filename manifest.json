{
  "name": "douban.fx",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "豆瓣电台体验增强",
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://douban.fm/?fx=*"],
      "js": ["content/index.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://douban.fm/mine"],
      "js": ["content/mine.js"],
      "css": ["content/mine.css"]
    }
  ],
  "permissions": ["webRequest", "http://*.douban.com/*"]
}
